---
const skills = [
  {
    category: "Frontend",
    items: [
      { name: "JavaScript", icon: "img/javascript.svg", url: "https://developer.mozilla.org/en-US/docs/Web/JavaScript", level: "Avanzado" },
      { name: "TypeScript", icon: "img/typescript.svg", url: "https://www.typescriptlang.org/", level: "Intermedio" },
      { name: "Angular", icon: "img/angular.svg", url: "https://angular.io/", level: "Intermedio" },
      { name: "Tailwind", icon: "img/Tailwind.svg", url: "https://tailwindcss.com/", level: "Avanzado" }
    ]
  },
  {
    category: "Backend",
    items: [
      { name: "PHP", icon: "img/php.svg", url: "https://www.php.net/", level: "Avanzado" },
      { name: "Laravel", icon: "img/laravel.svg", url: "https://laravel.com/", level: "Avanzado" }
    ]
  },
  {
    category: "Herramientas",
    items: [
      { name: "Figma", icon: "img/figma.svg", url: "https://www.figma.com/", level: "Intermedio" },
      { name: "Astro", icon: "favicon.svg", url: "https://astro.build/", level: "Avanzado" }
    ]
  }
];

const getLevelColor = (level: string) => {
  switch(level) {
    case "Avanzado": return "text-green-400";
    case "Intermedio": return "text-blue-400";
    case "Básico": return "text-yellow-400";
    default: return "text-gray-400";
  }
};

const getLevelBgColor = (level: string) => {
  switch(level) {
    case "Avanzado": return "bg-green-400/20 border-green-400/30";
    case "Intermedio": return "bg-blue-400/20 border-blue-400/30";
    case "Básico": return "bg-yellow-400/20 border-yellow-400/30";
    default: return "bg-gray-400/20 border-gray-400/30";
  }
};
---

<section class="w-full text-white py-20 px-6">
  <div class="max-w-6xl mx-auto">
    
    <!-- Header con título y línea decorativa -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-green-400 mb-4">My Skills</h2>
      <div class="w-24 h-1 bg-gradient-to-r from-green-400 to-blue-500 mx-auto rounded-full mb-6"></div>
    </div>

    <!-- Categorías de habilidades -->
    <div class="space-y-12">
      {skills.map(category => (
        <div class="space-y-6">
          <!-- Título de categoría -->
          <div class="text-center">
            <h3 class="text-2xl font-bold text-white mb-2">{category.category}</h3>
            <div class="w-16 h-1 bg-gradient-to-r from-blue-400 to-purple-500 mx-auto rounded-full"></div>
          </div>

          <!-- Grid de habilidades -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {category.items.map(skill => (
              <a 
                href={skill.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="group relative overflow-hidden"
              >
                <div class="relative bg-gradient-to-br from-[#112240] to-[#1a365d] p-6 rounded-xl border border-gray-700/50 hover:border-green-400/50 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-green-400/20">
                  
                  <!-- Fondo con patrón -->
                  <div class="absolute inset-0 bg-gradient-to-br from-transparent via-green-400/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <!-- Contenido principal -->
                  <div class="relative z-10 flex flex-col items-center text-center space-y-4">
                    
                    <!-- Icono con contenedor -->
                    <div class="w-20 h-20 flex items-center justify-center bg-gradient-to-br from-[#0a192f] to-[#1e3a8a] rounded-full shadow-lg group-hover:shadow-green-400/25 transition-all duration-300 group-hover:scale-110">
                      <img src={skill.icon} alt={skill.name} class="w-12 h-12 transition-transform duration-300 group-hover:rotate-12" />
                    </div>
                    
                    <!-- Nombre de la habilidad -->
                    <h4 class="text-white text-lg font-semibold group-hover:text-green-400 transition-colors duration-300">
                      {skill.name}
                    </h4>
                    
                    <!-- Nivel de experiencia -->
                    <div class={`px-3 py-1 rounded-full text-xs font-medium ${getLevelBgColor(skill.level)} border ${getLevelColor(skill.level)}`}>
                      {skill.level}
                    </div>
                  </div>

                  <!-- Efecto de brillo en hover -->
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
