---
const skills = [
  {
    category: "Frontend",
    items: [
      { name: "JavaScript", icon: "img/javascript.svg", url: "https://developer.mozilla.org/en-US/docs/Web/JavaScript", level: "Experto", years: "1+" },
      { name: "TypeScript", icon: "img/typescript.svg", url: "https://www.typescriptlang.org/", level: "Avanzado", years: "1+" },
      { name: "Angular", icon: "img/angular.svg", url: "https://angular.io/", level: "Avanzado", years: "1+" },
      { name: "Tailwind", icon: "img/Tailwind.svg", url: "https://tailwindcss.com/", level: "Experto", years: "1+" },
      { name: "Astro", icon: "favicon.svg", url: "https://astro.build/", level: "Experto", years: "2+" }
    ]
  },
  {
    category: "Backend",
    items: [
      { name: "PHP", icon: "img/php.svg", url: "https://www.php.net/", level: "Experto", years: "1+" },
      { name: "Laravel", icon: "img/laravel.svg", url: "https://laravel.com/", level: "Experto", years: "1+" },
      { name: "Java", icon: "img/java.png", url: "https://www.java.com/", level: "Avanzado", years: "1+" }
    ]
  },
  {
    category: "Herramientas",
    items: [
      { name: "Figma", icon: "img/figma.svg", url: "https://www.figma.com/", level: "Avanzado", years: "1+" },
      { name: "Git", icon: "img/git.png", url: "https://git-scm.com/", level: "Avanzado", years: "1+" },
      { name: "Docker", icon: "img/docker.png", url: "https://www.docker.com/", level: "Avanzado", years: "1+" }
    ]
  }
];

const getLevelColor = (level: string) => {
  if (level === "Experto") return "from-green-400 to-emerald-500";
  if (level === "Avanzado") return "from-blue-400 to-cyan-500";
  return "from-purple-400 to-pink-500";
};

const getLevelBadgeColor = (level: string) => {
  if (level === "Experto") return "bg-green-400/20 text-green-400 border-green-400/30";
  if (level === "Avanzado") return "bg-blue-400/20 text-blue-400 border-blue-400/30";
  return "bg-purple-400/20 text-purple-400 border-purple-400/30";
};
---

<section class="relative w-full text-white py-32 px-6 overflow-hidden" id="skills">
  <!-- Fondo -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#112240] via-[#0a192f] to-[#112240]"></div>
  
  <!-- Sombras decorativas para diferenciar la sección -->
  <div class="absolute inset-0 shadow-2xl shadow-blue-400/5"></div>
  <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-blue-400/10 to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-purple-400/10 to-transparent"></div>
  
  <!-- Elementos decorativos -->
  <div class="absolute top-40 left-20 w-64 h-64 bg-green-400/5 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-20 right-20 w-80 h-80 bg-blue-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s;"></div>

  <div class="relative max-w-7xl mx-auto">
    
    <!-- Header -->
    <div class="mb-20">
      <div class="inline-flex items-center space-x-3 mb-4">
        <span class="text-green-400 font-mono text-sm">02.</span>
        <h2 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-white to-gray-400 bg-clip-text text-transparent">Habilidades</h2>
      </div>
      <div class="w-32 h-0.5 bg-gradient-to-r from-green-400 to-transparent"></div>
      <p class="mt-6 text-gray-400 text-lg max-w-2xl">Tecnologías y herramientas con las que trabajo día a día para crear experiencias digitales excepcionales.</p>
    </div>

    <!-- Categorías de habilidades -->
    <div class="space-y-16">
      {skills.map((category, idx) => (
        <div class="space-y-8">
          
          <!-- Título de categoría -->
          <div class="flex items-center space-x-4">
            <div class="w-10 h-10 bg-gradient-to-br from-green-400/20 to-blue-500/20 rounded-lg flex items-center justify-center">
              <span class="text-green-400 font-bold text-lg">{idx + 1}</span>
            </div>
            <h3 class="text-3xl font-bold text-white">{category.category}</h3>
            <div class="flex-1 h-px bg-gradient-to-r from-white/20 to-transparent"></div>
          </div>

           <!-- Grid de habilidades -->
           <div class="grid sm:grid-cols-2 gap-4 sm:gap-6">
            {category.items.map(skill => (
              <a 
                href={skill.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="group block"
              >
                <div class="relative p-6 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 hover:border-green-400/30 transition-all duration-300 hover:transform hover:translate-y-[-4px]">
                  
                  <!-- Header del skill -->
                  <div class="flex items-center space-x-4 mb-4">
                    <!-- Icono -->
                    <div class="w-16 h-16 bg-gradient-to-br from-white/10 to-white/5 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 relative">
                      <img src={skill.icon} alt={skill.name} class="w-10 h-10" />
                      <div class={`absolute -inset-0.5 bg-gradient-to-r ${getLevelColor(skill.level)} rounded-xl opacity-0 group-hover:opacity-20 blur transition-opacity duration-300`}></div>
                    </div>
                    
                    <!-- Nombre y link -->
                    <div class="flex-1">
                      <h4 class="text-white text-xl font-semibold group-hover:text-green-400 transition-colors duration-300 mb-1">
                        {skill.name}
                      </h4>
                      <p class="text-gray-500 text-sm flex items-center">
                        Ver documentación 
                        <svg class="w-3 h-3 ml-1 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </p>
                    </div>
                  </div>

                  <!-- Badges de nivel y experiencia -->
                  <div class="flex items-center gap-3">
                    <!-- Badge de nivel -->
                    <div class={`px-3 py-1.5 rounded-lg border backdrop-blur-sm ${getLevelBadgeColor(skill.level)} font-semibold text-sm flex items-center gap-1.5`}>
                      <div class={`w-2 h-2 rounded-full bg-gradient-to-r ${getLevelColor(skill.level)} animate-pulse-slow`}></div>
                      {skill.level}
                    </div>
                    
                    <!-- Badge de años -->
                    <div class="px-3 py-1.5 rounded-lg border border-white/10 bg-white/5 backdrop-blur-sm text-gray-300 text-sm font-medium flex items-center gap-1.5">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      {skill.years} años
                    </div>
                  </div>

                  <!-- Indicadores visuales decorativos -->
                  <div class="mt-4 flex gap-1">
                    {[...Array(skill.level === "Experto" ? 5 : skill.level === "Avanzado" ? 4 : 3)].map((_, i) => (
                      <div 
                        class={`h-1 flex-1 rounded-full bg-gradient-to-r ${getLevelColor(skill.level)} opacity-70`}
                        style={`animation-delay: ${i * 0.1}s`}
                      ></div>
                    ))}
                    {[...Array(skill.level === "Experto" ? 0 : skill.level === "Avanzado" ? 1 : 2)].map(() => (
                      <div class="h-1 flex-1 rounded-full bg-white/10"></div>
                    ))}
                  </div>

                  <!-- Efecto hover -->
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-green-400/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl pointer-events-none"></div>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Call to action final -->
    <div class="mt-20 text-center">
      <div class="inline-block p-8 bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-3xl border border-white/10">
        <p class="text-gray-300 text-lg mb-4">¿Quieres ver estas habilidades en acción?</p>
        <a href="/#projects" class="inline-flex items-center space-x-2 bg-gradient-to-r from-green-400 to-blue-500 hover:from-green-500 hover:to-blue-600 text-white font-semibold py-3 px-8 rounded-xl transition-all duration-300 shadow-lg shadow-green-400/20 hover:shadow-green-400/40 hover:scale-105">
          <span>Explorar proyectos</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>

  </div>
</section>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
  }
  
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 2s ease-in-out infinite;
  }
</style>