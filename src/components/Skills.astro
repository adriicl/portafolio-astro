---
const skills = [
  { name: "Tailwind", icon: "img/Tailwind.svg", url: "https://tailwindcss.com/" },
  { name: "Figma", icon: "img/figma.svg", url: "https://www.figma.com/" },
  { name: "JavaScript", icon: "img/javascript.svg", url: "https://developer.mozilla.org/en-US/docs/Web/JavaScript" },
  { name: "PHP", icon: "img/php.svg", url: "https://www.php.net/" },
  { name: "TypeScript", icon: "img/typescript.svg", url: "https://www.typescriptlang.org/" },
  { name: "Astro", icon: "favicon.svg", url: "https://astro.build/" },
  { name: "Laravel", icon: "img/laravel.svg", url: "https://laravel.com/" },
  { name: "Angular", icon: "img/angular.svg", url: "https://angular.io/" }
];
---

<section class="w-full text-white py-16 px-6 flex flex-col items-center">
  <h2 class="text-4xl font-bold text-green-400 mb-6">My Skills</h2>  
  <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
    {skills.map(skill => (
      <a href={skill.url} target="_blank" rel="noopener noreferrer" class="relative group flex flex-col items-center text-center bg-[#112240] p-8 rounded-xl shadow-lg transition-transform transform hover:scale-105 hover:bg-[#1c3a5e]">
        <div class="w-16 h-16 flex items-center justify-center bg-[#0a192f] rounded-full shadow-md group-hover:bg-green-500 transition">
          <img src={skill.icon} alt={skill.name} class="w-12 h-12" />
        </div>
        <p class="text-white text-lg mt-4 font-semibold group-hover:text-green-400 transition">{skill.name}</p>
      </a>
    ))}
  </div>
</section>
