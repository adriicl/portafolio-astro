---
const aboutText = "I am a passionate Web Developer who enjoys creating high-performance, scalable, and visually stunning websites. I specialize in front-end and back-end technologies, ensuring seamless digital experiences.";
const videoId = "dQw4w9WgXcQ";
const backgroundImage = "../public/img/backgroundvideo.jpg";
---

<section class="w-full text-white py-16 px-6 flex flex-col md:flex-row items-center gap-12 bg-[#191a1a] bg-[linear-gradient(180deg,transparent_24%,rgba(0,115,19,0.3)_25%,rgba(0,115,19,0.3)_26%,transparent_27%,transparent_74%,rgba(0,115,19,0.3)_75%,rgba(0,115,19,0.3)_76%,transparent_77%,transparent),linear-gradient(45deg,transparent_24%,rgba(0,115,19,0.3)_35%,rgba(0,115,19,0.3)_26%,transparent_17%,transparent_74%,rgba(0,115,19,0.3)_75%,rgba(0,115,19,0.3)_76%,transparent_77%,transparent)] bg-[55px_55px]">
  <!-- Video con previsualizaciÃ³n y overlay estilo tarjeta -->
  <div class="relative w-full md:w-1/3">
    <div class="rounded-xl overflow-hidden shadow-xl border border-green-400 bg-black relative group">
      <a href={`https://www.youtube.com/watch?v=${videoId}`} target="_blank" class="block w-full h-64 md:h-72 lg:h-80 relative">
        <img src={backgroundImage} alt="About Background" class="absolute inset-0 w-full h-full object-cover opacity-60">
        <!-- Overlay -->
        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 transition group-hover:bg-opacity-70">
          <div class="flex flex-col items-center">
            <div class="w-16 h-16 bg-white bg-opacity-80 rounded-full flex items-center justify-center shadow-lg transition group-hover:scale-110">
              <svg class="w-10 h-10 text-black" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M7 6v12l10-6-10-6z"></path>
              </svg>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>

  <!-- Texto -->
  <div class="w-full md:w-2/3 space-y-6">
    <h2 class="text-3xl font-bold text-green-400">About Me</h2>
    <p class="text-lg font-semibold text-white">{aboutText}</p>
    <p class="text-lg text-gray-300">{aboutText} <span class="font-bold text-white">Creating seamless user experiences.</span></p>
    <p class="text-lg text-gray-500">{aboutText} <span class="text-gray-300">Dedicated to building modern and scalable applications.</span></p>
  </div>
</section>
