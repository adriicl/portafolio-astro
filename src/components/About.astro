---
const aboutText = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Excepturi temporibus nihil veritatis sequi molestias dignissimos facere";
const videoSrc = "/videos/about.mp4";
const heading = "Get to know Kent C. Dodds";
---

<section class="w-full bg-gradient-to-b from-gray-900 to-black text-white py-16 px-6 flex flex-col md:flex-row items-center gap-12">
  <!-- Video con overlay -->
  <div class="relative w-full md:w-1/3">
    <div class="rounded-xl overflow-hidden shadow-xl border border-gray-700">
      <video autoplay muted loop class="w-full h-auto rounded-xl">
        <source src={videoSrc} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
      <!-- Overlay de texto -->
      <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50">
        <h2 class="text-white text-lg md:text-xl font-semibold text-center">{heading}</h2>
      </div>
    </div>
  </div>

  <!-- Texto -->
  <div class="w-full md:w-2/3 space-y-6">
    <p class="text-lg font-semibold text-white">{aboutText}</p>
    <p class="text-lg text-gray-300">{aboutText} <span class="font-bold text-white">{aboutText}</span></p>
    <p class="text-lg text-gray-500">{aboutText} <span class="text-gray-300">{aboutText}</span></p>
  </div>
</section>
