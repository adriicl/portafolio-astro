---
const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/",
    icon: "M9 19c-5 2-5-3-7-4m14 8v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77a5.07 5.07 0 0 0-.09-3.73s-1.18-.37-3.91 1.48A13.38 13.38 0 0 0 12 2c-1.19 0-2.38.16-3.5.47C6.24 1.26 5.06 1.63 5.06 1.63a5.07 5.07 0 0 0-.09 3.73A5.44 5.44 0 0 0 4 9.52c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9.5 19V22",
    color: "hover:text-green-400 hover:bg-green-400/10",
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/",
    icon: "M16 8a6 6 0 0 1 6 6v6h-4v-6a2 2 0 0 0-4 0v6h-4v-6a6 6 0 0 1 6-6z M2 9h4v12H2z M4 6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z",
    color: "hover:text-blue-400 hover:bg-blue-400/10",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/",
    icon: "M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z",
    color: "hover:text-sky-400 hover:bg-sky-400/10",
  },
  {
    name: "Instagram",
    url: "https://instagram.com/",
    icon: "M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z M17.5 6.5h.01 M22 12c0 5.52-4.48 10-10 10S2 17.52 2 12 6.48 2 12 2s10 4.48 10 10z",
    color: "hover:text-pink-400 hover:bg-pink-400/10",
  },
];

const currentYear = new Date().getFullYear();
---

<footer
  class="w-full bg-gradient-to-br backdrop-blur-xl text-gray-300 py-10 border-t border-green-400/20"
>
  <div class="max-w-5xl mx-auto px-6">
    <!-- Contenido principal del footer -->
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- Columna 1: Información personal -->
      <div class="space-y-4">
        <div class="space-y-2">
          <h3 class="text-xl font-bold text-white">Adrian Cabrera Leonis</h3>
          <p class="text-gray-400">@adriicl17</p>
        </div>

        <!-- Botón de contacto -->
        <a
          href="/contact"
          class="inline-flex items-center space-x-2 bg-gradient-to-r from-green-400 to-blue-500 hover:from-green-500 hover:to-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg text-sm"
        >
          <span>Contáctame</span>
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Columna 2: Enlaces rápidos -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold text-white">Enlaces Rápidos</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="/"
              class="text-gray-400 hover:text-green-400 transition-colors duration-300 flex items-center space-x-2 group text-sm"
            >
              <svg
                class="w-3 h-3 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Inicio</span>
            </a>
          </li>
          <li>
            <a
              href="/projects"
              class="text-gray-400 hover:text-green-400 transition-colors duration-300 flex items-center space-x-2 group text-sm"
            >
              <svg
                class="w-3 h-3 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Proyectos</span>
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-gray-400 hover:text-green-400 transition-colors duration-300 flex items-center space-x-2 group text-sm"
            >
              <svg
                class="w-3 h-3 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Contacto</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Columna 3: Redes sociales -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold text-white">Conecta Conmigo</h4>

        <!-- Redes sociales en fila horizontal -->
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class={`group p-2 rounded-full bg-gray-800/50 hover:bg-gray-700/50 transition-all duration-300 ${social.color}`}
              >
                <svg
                  class="w-5 h-5 transition-transform duration-300 group-hover:scale-110"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={social.icon}
                  />
                </svg>
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Línea separadora -->
    <div
      class="w-full h-px bg-gradient-to-r from-transparent via-green-400/30 to-transparent mb-6"
    >
    </div>

    <!-- Footer inferior -->
    <div
      class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0"
    >
      <!-- Copyright -->
      <div class="text-center md:text-left">
        <p class="text-gray-400 text-sm">
          © {currentYear} Adrian Cabrera Leonis. Todos los derechos reservados.
        </p>
      </div>

      <!-- Tecnologías utilizadas -->
      <div class="flex items-center space-x-4 text-xs text-gray-500">
        <span class="flex items-center space-x-2">
          <span>Tecnologías utilizadas:</span>
        </span>
        <span class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-400 rounded-full"></div>
          <span>Astro</span>
        </span>
        <span class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
          <span>Tailwind</span>
        </span>
        <span class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
          <span>JavaScript</span>
        </span>
      </div>
    </div>
  </div>
</footer>
