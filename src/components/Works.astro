---
const projects = [
  {
    title: "API Valorant",
    description:
      "Sitio web interactivo de Valorant construido con JavaScript, HTML y Tailwind CSS, que permite explorar agentes, habilidades, mapas y armas con sus skins.",
    link: "https://adriicl.github.io/Valorant/",
    image: "/img/valorant.webp",
    technologies: ["JavaScript", "HTML", "Tailwind CSS"],
    category: "Frontend",
  },
  {
    title: "Marvel App",
    description:
      "Diseño de interfaz mostrando contenido de Marvel con Tailwind y Framer Motion.",
    link: "/projects/marvel",
    image: "/img/marvel.jpg",
    technologies: ["Tailwind CSS", "Framer Motion", "React"],
    category: "UI/UX",
  },
  {
    title: "E-commerce Platform",
    description:
      "Tienda online full‑stack basada en Laravel y Vue.js.",
    link: "/projects/ecommerce",
    image: "/img/futbol.webp",
    technologies: ["Laravel", "Vue.js", "PHP", "MySQL"],
    category: "Full-Stack",
  },
  {
    title: "Portfolio Website",
    description:
      "Portafolio personal construido con Astro y Tailwind CSS.",
    link: "/projects/portfolio",
    image: "/img/futbol.webp",
    technologies: ["Astro", "Tailwind CSS"],
    category: "Frontend",
  },
  {
    title: "AI Chatbot",
    description:
      "Chatbot con IA utilizando la API de OpenAI.",
    link: "/projects/chatbot",
    image: "/img/futbol.webp",
    technologies: ["OpenAI API", "Node.js"],
    category: "AI/ML",
  },
];

const getCategoryColor = (category: string): string => {
  switch (category) {
    case "Frontend":
      return "bg-blue-500/20 text-blue-400 border-blue-400/30";
    case "UI/UX":
      return "bg-purple-500/20 text-purple-400 border-purple-400/30";
    case "Full-Stack":
      return "bg-green-500/20 text-green-400 border-green-400/30";
    case "AI/ML":
      return "bg-emerald-500/20 text-emerald-400 border-emerald-400/30";
    default:
      return "bg-gray-500/20 text-gray-400 border-gray-400/30";
  }
};
---

<section class="w-full text-white py-20 px-6">
  <div class="max-w-6xl mx-auto">
    <!-- Header con título y línea decorativa -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-green-400 mb-4">Todos los Proyectos</h2>
      <div class="w-24 h-1 bg-gradient-to-r from-green-400 to-blue-500 mx-auto rounded-full mb-6"></div>
      <p class="text-gray-300 max-w-2xl mx-auto">Explora todos mis trabajos recientes. Cada tarjeta incluye una vista previa y acceso directo.</p>
    </div>

    <!-- Grid de todos los proyectos -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <a href={project.link} class="group block" target="_blank">
          <div class="relative overflow-hidden rounded-xl shadow-lg border border-gray-700/50 hover:border-green-400/50 transition-all duration-500 h-[300px] md:h-[350px]">
            <div class="relative h-full overflow-hidden">
              <img src={project.image} alt={project.title} class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <!-- Categoría -->
              <div class={`inline-block px-3 py-1 rounded-full text-xs font-medium border ${getCategoryColor(project.category)} mb-3`}>
                {project.category}
              </div>
              <!-- Título -->
              <h3 class="text-xl md:text-2xl font-bold text-white mb-3 group-hover:text-green-400 transition-colors duration-300">{project.title}</h3>
              <!-- Descripción -->
              <p class="text-gray-300 mb-4 text-sm leading-relaxed">{project.description}</p>
              <!-- Tecnologías -->
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies?.slice(0, 3).map((tech) => (
                  <span class="px-2 py-1 bg-gray-800/50 text-gray-300 text-xs rounded border border-gray-700/50">{tech}</span>
                ))}
              </div>
              <!-- CTA -->
              <div class="flex items-center space-x-2 text-green-400 font-semibold text-sm group-hover:text-white transition-colors duration-300">
                <span>Ver Proyecto</span>
                <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
