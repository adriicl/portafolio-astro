---
const heroText =
  "Especializado en crear sitios modernos, rápidos y adaptables, combinando front-end y back-end para ofrecer experiencias digitales completas.";
const buttonText = "Contactar";
const secondaryButtonText = "Curriculum";
const aboutButtonText = " Descubre sobre mi";

// Tecnologías que usas
const technologies = [
  "JavaScript", "TypeScript", "Angular", 
  "PHP", "Laravel", "Astro", "Tailwind CSS", "Figma"
];
---

<section
  class="relative w-full min-h-screen flex flex-col md:flex-row items-center justify-between px-6 md:px-12 py-16 overflow-hidden"
>
  <!-- Fondos decorativos -->
  <div class="pointer-events-none absolute inset-0 -z-10">
    <div
      class="absolute -top-32 -left-32 w-[500px] h-[500px] bg-green-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute -bottom-32 -right-32 w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_rgba(255,255,255,0.06),_transparent_60%)]"
    >
    </div>
  </div>

  <!-- Contenedor del texto -->
  <div class="flex-1 max-w-4xl text-left xl:ml-30">
    <p class="text-green-400 text-base md:text-lg font-mono">
      Hola, mi nombre es
    </p>
    <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-3">
      <span
        class="bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-blue-500"
        >Adrián Cabrera Leonis</span
      >
    </h1>
    <h2
      class="text-2xl md:text-4xl font-semibold text-gray-300 mb-6 flex items-center gap-3"
    >
      Soy Desarrollador Web
      <span
        class="inline-block w-14 h-[3px] bg-gradient-to-r from-green-400 to-blue-500 rounded-full"
      ></span>
    </h2>
    <p class="text-base md:text-lg text-gray-300 max-w-xl leading-relaxed">
      {heroText}
    </p>

    <!-- Etiquetas de tecnologías -->
    <div class="mt-6 flex flex-wrap gap-2">
      {technologies.map((tech) => (
        <span class="px-3 py-1 text-xs font-medium text-gray-300 bg-white/5 border border-white/10 rounded-full hover:bg-white/10 transition-colors duration-200">
          {tech}
        </span>
      ))}
    </div>

    <!-- Botones -->
    <div class="mt-8 flex flex-wrap gap-4">
      <a
        href="#contact"
        class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-blue-600 text-white px-6 py-3 text-base md:text-lg font-medium rounded-md shadow-lg shadow-green-500/10 hover:from-green-400 hover:to-blue-500 transition-transform duration-200 hover:scale-[1.02]"
      >
        {buttonText}
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
      <a
        href="/CVh.docx.pdf"
        class="inline-flex items-center gap-2 border border-blue-400 text-blue-400 px-6 py-3 text-base md:text-lg font-medium rounded-md transition hover:bg-blue-400 hover:text-[#0a192f]"
        target="_blank"
      >
        {secondaryButtonText}
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 4v12m0 0l-4-4m4 4l4-4M4 20h16"></path>
        </svg>
      </a>
    </div>
    <!-- Iconos de redes sociales -->
    <div class="mt-6 flex items-center gap-4">
      <a
        href="https://github.com/adriicl"
        target="_blank"
        rel="noopener noreferrer"
        class="w-12 h-12 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:text-white hover:border-white hover:bg-green-400/10 transition-all duration-300 hover:scale-110"
        aria-label="GitHub"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
      <a
        href="https://www.linkedin.com/in/adrián-cabrera-leonis-868153298"
        target="_blank"
        rel="noopener noreferrer"
        class="w-12 h-12 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:text-blue-400 hover:border-blue-400 hover:bg-blue-400/10 transition-all duration-300 hover:scale-110"
        aria-label="LinkedIn"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
        <a
          href="mailto:adriancabreraleonis172003@gmail.com"
          class="w-12 h-12 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:text-green-400 hover:border-green-400 hover:bg-green-400/10 transition-all duration-300 hover:scale-110"
          aria-label="Email"
        >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- Ilustración abstracta a la derecha -->
  <div class="flex-1 w-full mt-12 md:mt-0 flex justify-end items-center xl:mr-30">
    <div class="relative w-full max-w-lg aspect-square">
      <!-- Blob degradado -->
      <div
        class="absolute inset-0 rounded-[40%] bg-gradient-to-tr from-green-500/25 via-blue-500/20 to-purple-500/20 blur-2xl"
      >
      </div>
      <div class="absolute inset-0 rounded-[40%] ring-1 ring-white/10"></div>

      <!-- Avatar con iniciales -->
      <div class="absolute inset-0 flex items-center justify-center">
        <div
          class="relative w-64 h-64 md:w-80 md:h-80 rounded-full bg-[#0b1730] ring-1 ring-white/10 shadow-2xl overflow-hidden"
        >
          <div
            class="absolute -inset-1 bg-gradient-to-br from-green-400/30 to-blue-500/30 blur-xl"
          >
          </div>
          <div class="relative w-full h-full flex items-center justify-center">
            <span
              class="text-5xl md:text-6xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-blue-500"
              ><img src="img/foto-perfil.jpeg"  alt="Foto de perfil"></span
            >
          </div>
        </div>
      </div>

      <!-- Tarjeta flotante -->
      <div
        class="absolute -bottom-4 -left-4 md:-bottom-6 md:-left-6 bg-white/5 backdrop-blur-md border border-white/10 text-gray-200 rounded-xl px-4 py-3 shadow-lg"
      >
        <div class="text-xs uppercase tracking-wide text-gray-400">
          Disponibilidad
        </div>

        <div class="mt-1 font-semibold">
          <span
            class="inline-block w-2 h-2 rounded-full mr-2 bg-green-400 animate-pulse"
          ></span>Abierto a proyectos
        </div>
      </div>

      <!-- Tarjeta flotante 2 -->
      <div
        class="absolute -top-4 -right-4 md:-top-6 md:-right-6 bg-white/5 backdrop-blur-md border border-white/10 text-gray-200 rounded-xl px-4 py-3 shadow-lg"
      >
        <div class="flex items-center gap-2">
          <span
            class="inline-block w-2 h-2 rounded-full bg-green-400 animate-pulse"
          ></span>
          <span class="text-sm">+1 años experiencia</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Botón flotante "Sobre mí" en el centro -->
  <div class="absolute bottom-30 left-1/2 transform -translate-x-1/2 z-10">
    <a
      href="#about"
      class="group flex flex-col items-center gap-2 text-gray-300 hover:text-green-400 transition-colors duration-300"
    >
      <span class="text-lg font-medium tracking-wide">{aboutButtonText}</span>
      <div class="w-10 h-10 rounded-full border border-gray-400 group-hover:border-green-400 flex items-center justify-center transition-all duration-300 group-hover:scale-110">
        <svg
          class="w-4 h-4 group-hover:translate-y-0.5 transition-transform duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"
          ></path>
        </svg>
      </div>
    </a>
  </div>
</section>
