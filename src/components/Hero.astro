---
const heroText = "Especializado en crear sitios modernos, rápidos y adaptables, combinando front-end y back-end para ofrecer experiencias digitales completas.";
const buttonText = "Contactar";
const secondaryButtonText = "Curriculum";
---

<section class="relative w-screen h-screen flex flex-col md:flex-row items-center justify-between px-12 overflow-hidden">
  
  <!-- Contenedor del texto -->
  <div class="flex-1 max-w-4xl text-left">
    <p class="text-green-400 text-lg font-mono">Hola, mi nombre es</p>
    <h1 class="text-6xl font-extrabold text-white mb-4">Adrián Cabrera Leonis</h1>
    <h2 class="text-5xl font-semibold text-gray-400 mb-6">Soy Desarrollador Web</h2>
    <p class="text-lg text-gray-300 max-w-lg leading-relaxed">{heroText}</p>
    
    <!-- Botones -->
    <div class="mt-8 flex space-x-4">
      <a href="/contact" class="border border-green-400 text-green-400 px-6 py-3 text-lg font-medium rounded-md transition hover:bg-green-400 hover:text-[#0a192f]">
        {buttonText}
      </a>
      <a href="/CV.pdf" class="border border-blue-400 text-blue-400 px-6 py-3 text-lg font-medium rounded-md transition hover:bg-blue-400 hover:text-[#0a192f]" target="_blank">
        {secondaryButtonText}
      </a>
    </div>
  </div>

  <!-- Imagen a la derecha -->
  <div class="flex-1 flex justify-end items-center">
    <img src="img/developer.png" alt="Web Developer Illustration" class="w-full h-auto max-w-lg object-contain">
  </div>

</section>
