--- 
const heroText = "I’m a passionate Web Developer who specializes in crafting high-performance, scalable, and visually stunning web applications. My expertise spans across front-end and back-end technologies, ensuring seamless digital experiences.";
const buttonText = "Contact Me";
const secondaryButtonText = "View My Projects";
import "../styles/global.css";
---

<section class="relative w-full h-screen bg-[#0a192f] flex items-center justify-between px-12">
  <div class="max-w-4xl text-left">
    
    <!-- Texto Principal -->
    <p class="text-green-400 text-lg font-mono">Hi, my name is</p>
    <h1 class="text-6xl font-extrabold text-white mb-4">Adrián Cabrera Leonis</h1>
    <h2 class="text-5xl font-semibold text-gray-400 mb-6">I'm a Web Developer</h2>
    <p class="text-lg text-gray-300 max-w-lg leading-relaxed">{heroText}</p>
    
    <!-- Botones de llamada a la acción -->
    <div class="mt-8 flex space-x-4">
      <a href="/contact" class="border border-green-400 text-green-400 px-6 py-3 text-lg font-medium rounded-md transition hover:bg-green-400 hover:text-[#0a192f]">
        {buttonText}
      </a>
      <a href="/projects" class="border border-blue-400 text-blue-400 px-6 py-3 text-lg font-medium rounded-md transition hover:bg-blue-400 hover:text-[#0a192f]">
        {secondaryButtonText}
      </a>
    </div>
  </div>

  <!-- Imagen a la derecha -->
  <div class="w-1/3 max-w-md animate-fade-in mr-20">
    <img src="../public/img/developer.png" alt="Web Developer Illustration" class="w-full h-auto object-contain">
  </div>
</section>
