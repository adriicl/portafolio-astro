---
const heroText = "I specialize in creating modern, responsive, and high-performance websites. With expertise in front-end and back-end development, I build seamless digital experiences.";
const buttonText = "Contact Me";
const secondaryButtonText = "View Projects";
---

<section class="relative w-full h-screen flex flex-col md:flex-row items-center justify-between px-12 overflow-hidden">
  
  <!-- Contenedor del texto -->
  <div class="flex-1 max-w-4xl text-left">
    <p class="text-green-400 text-lg font-mono">Hi, my name is</p>
    <h1 class="text-6xl font-extrabold text-white mb-4">Adri√°n Cabrera Leonis</h1>
    <h2 class="text-5xl font-semibold text-gray-400 mb-6">I'm a Web Developer</h2>
    <p class="text-lg text-gray-300 max-w-lg leading-relaxed">{heroText}</p>
    
    <!-- Botones -->
    <div class="mt-8 flex space-x-4">
      <a href="/contact" class="border border-green-400 text-green-400 px-6 py-3 text-lg font-medium rounded-md transition hover:bg-green-400 hover:text-[#0a192f]">
        {buttonText}
      </a>
      <a href="/projects" class="border border-blue-400 text-blue-400 px-6 py-3 text-lg font-medium rounded-md transition hover:bg-blue-400 hover:text-[#0a192f]">
        {secondaryButtonText}
      </a>
    </div>
  </div>

  <!-- Imagen a la derecha -->
  <div class="flex-1 flex justify-end items-center">
    <img src="img/developer.png" alt="Web Developer Illustration" class="w-full h-auto max-w-lg object-contain">
  </div>

</section>
