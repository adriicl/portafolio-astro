---
const heroText = "I’m a passionate Web Developer who loves crafting modern, responsive, and high-performance websites. With expertise in front-end and back-end technologies, I create seamless user experiences that bring ideas to life.";
const buttonText = "Contact me";
---

<section class="relative w-full h-screen bg-gradient-to-r from-gray-900 to-black flex items-center">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between w-full px-6">
    
    <!-- Texto -->
    <div class="text-white max-w-lg">
      <h1 class="text-5xl mb-10">Adrián Cabrera Leonis</h1>
      <p class="text-lg font-semibold">{heroText}</p>
      
      <!-- Botón -->
      <button class="mt-6 bg-gray-200 text-black py-3 px-6 rounded-full text-lg font-medium shadow-lg hover:bg-gray-300 hover:shadow-xl transition">
        {buttonText}
      </button>
    </div>

    <!-- Imagen decorativa -->
    <div class="absolute right-0 bottom-0 w-1/3 max-w-sm">
      <img src="/images/decorative.png" alt="Decorative" class="w-full h-auto object-contain">
    </div>

  </div>
</section>
