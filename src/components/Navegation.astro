---
const links = [
  { name: "Home", href: "/", icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
  { name: "Projects", href: "/#projects", icon: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" },
  { name: "Contact", href: "/#contact", icon: "M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" },
];
---

<nav class="w-full backdrop-blur-xl text-gray-300 py-4 px-6 fixed top-0 left-0 shadow-2xl z-50 border-b border-green-400/30 transition-all duration-300">
  <div class="w-full flex items-center justify-between">
    
    <!-- Logo/Nombre con efectos mejorados -->
    <a href={links[0].href} class="group">
      <div class="relative">
        <div class="flex items-center gap-3 text-2xl font-bold tracking-wide text-green-400 transition-all duration-300 group-hover:text-white group-hover:scale-105">
          <img src="/img/favicon.png" alt="Foto de perfil" class="h-8 w-8 md:h-10 md:w-10 rounded-full ring-1 ring-white/10 shadow" />
          <span>Adrian Cabrera Leonis</span>
        </div>
        <!-- Línea decorativa que aparece en hover -->
        <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 transition-all duration-300 group-hover:w-full"></div>
      </div>
    </a>
    
    <!-- Menú para escritorio con iconos y efectos mejorados -->
    <ul class="hidden md:flex space-x-8 text-lg">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="group relative flex items-center space-x-2 font-semibold text-lg transition-all duration-300 hover:text-green-400 px-4 py-2 rounded-lg hover:bg-green-400/10"
            data-link={link.href}
          >
            <!-- Icono SVG -->
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={link.icon}></path>
            </svg>
            
            <!-- Texto del enlace -->
            <span>{link.name}</span>
            
            <!-- Línea de subrayado animada -->
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 transition-all duration-300 group-hover:w-full"></div>
          </a>
        </li>
      ))}
    </ul>

    <!-- Sin botón hamburguesa en móvil -->
  </div>
</nav>

<!-- Barra de navegación inferior para móviles -->
<nav class="md:hidden fixed bottom-0 left-0 right-0 z-50">
  <div class="mx-auto w-full bg-[#0c0c0c]/95 backdrop-blur-xl border-t border-green-400/30 shadow-[0_-10px_30px_-15px_rgba(0,0,0,0.7)]">
    <ul class="grid grid-cols-3 gap-0">
      {links.map((link) => (
        <li>
          <a
            href={link.href}
            class="flex flex-col items-center justify-center gap-1 py-3 text-sm font-medium text-gray-300 hover:text-green-400 transition-colors"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={link.icon}></path>
            </svg>
            <span>{link.name}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
