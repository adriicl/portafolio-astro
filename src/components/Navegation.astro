---
const links = [
  { name: "Home", href: "/", icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
  { name: "Projects", href: "/projects", icon: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" },
  { name: "Contact", href: "/contact", icon: "M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" },
];
---

<nav class="w-full backdrop-blur-xl text-gray-300 py-4 px-6 fixed top-0 left-0 shadow-2xl z-50 border-b border-green-400/30 transition-all duration-300">
  <div class="w-full flex items-center justify-between">
    
    <!-- Logo/Nombre con efectos mejorados -->
    <a href={links[0].href} class="group">
      <div class="relative">
        <div class="text-2xl font-bold tracking-wide text-green-400 transition-all duration-300 group-hover:text-white group-hover:scale-105">
          Adrian Cabrera Leonis
        </div>
        <!-- Línea decorativa que aparece en hover -->
        <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 transition-all duration-300 group-hover:w-full"></div>
      </div>
    </a>
    
    <!-- Menú para escritorio con iconos y efectos mejorados -->
    <ul class="hidden md:flex space-x-8 text-lg">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="group relative flex items-center space-x-2 font-semibold text-lg transition-all duration-300 hover:text-green-400 px-4 py-2 rounded-lg hover:bg-green-400/10"
            data-link={link.href}
          >
            <!-- Icono SVG -->
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={link.icon}></path>
            </svg>
            
            <!-- Texto del enlace -->
            <span>{link.name}</span>
            
            <!-- Línea de subrayado animada -->
            <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 transition-all duration-300 group-hover:w-full"></div>
          </a>
        </li>
      ))}
    </ul>

    <!-- Botón hamburguesa mejorado para móviles -->
    <button id="menu-toggle" class="md:hidden group relative p-2 rounded-lg hover:bg-green-400/10 transition-all duration-300 focus:outline-none">
      <div class="w-6 h-6 flex flex-col justify-center items-center">
        <span class="w-6 h-0.5 bg-green-400 rounded-full transition-all duration-300 group-hover:bg-white group-hover:rotate-45 group-hover:translate-y-1.5"></span>
        <span class="w-6 h-0.5 bg-green-400 rounded-full transition-all duration-300 group-hover:opacity-0 mt-1"></span>
        <span class="w-6 h-0.5 bg-green-400 rounded-full transition-all duration-300 group-hover:bg-white group-hover:-rotate-45 group-hover:-translate-y-1.5 mt-1"></span>
      </div>
    </button>
  </div>

  <!-- Menú desplegable en móviles mejorado -->
  <div id="mobile-menu" class="fixed top-0 left-0 w-full h-screen bg-gradient-to-br from-[#0a0a0a] via-[#1a1a1a] to-[#0a0a0a] text-white flex flex-col items-center justify-center space-y-8 transform -translate-x-full transition-all duration-500 md:hidden backdrop-blur-xl">
    
    <!-- Logo en el menú móvil -->
    <div class="absolute top-8 left-8">
      <div class="text-xl font-bold text-green-400">ACL</div>
    </div>
    
    <!-- Enlaces del menú móvil -->
    <div class="space-y-6 text-center">
      {links.map((link) => (
        <a 
          href={link.href} 
          class="group flex flex-col items-center space-y-2 text-2xl font-semibold hover:text-green-400 transition-all duration-300 py-4 px-8 rounded-xl hover:bg-green-400/10"
        >
          <!-- Icono grande para móviles -->
          <div class="w-16 h-16 bg-green-400/10 rounded-full flex items-center justify-center group-hover:bg-green-400/20 transition-all duration-300">
            <svg class="w-8 h-8 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={link.icon}></path>
            </svg>
          </div>
          <span>{link.name}</span>
        </a>
      ))}
    </div>

    <!-- Botón de cierre mejorado -->
    <button id="close-menu" class="absolute top-8 right-8 w-12 h-12 bg-green-400/20 rounded-full flex items-center justify-center text-green-400 hover:bg-green-400 hover:text-white transition-all duration-300 group">
      <svg class="w-6 h-6 transition-transform duration-300 group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Información adicional en el menú móvil -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-center">
      <p class="text-sm text-gray-400 mb-2">Desarrollador Web Full-Stack</p>
      <div class="flex space-x-4 justify-center">
        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
        <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse" style="animation-delay: 0.2s;"></div>
        <div class="w-2 h-2 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 0.4s;"></div>
      </div>
    </div>
  </div>
</nav>

<!-- Importando el JavaScript -->
<script src="../scripts/nav.js"></script>
