---
const links = [
  { name: "Home", href: "/" },
  { name: "Projects", href: "/projects" },
  { name: "Contact", href: "/contact" },
];
---

<nav class="w-full bg-[#191a1a] backdrop-blur-md text-gray-300 py-4 px-6 fixed top-0 left-0 shadow-lg z-50 border-b border-green-400">
  <div class="w-full flex items-center justify-between">
    
    <!-- Nombre alineado completamente a la izquierda -->
    <div class="text-2xl font-bold tracking-wide transition-transform transform hover:scale-105 text-green-400">
      Adrian Cabrera Leonis
    </div>
    
    <!-- Menú para escritorio -->
    <ul class="hidden md:flex space-x-6 text-lg">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="relative font-semibold text-xl transition-all duration-300 hover:text-green-400 after:content-[''] after:block after:w-0 after:h-[2px] after:bg-green-400 after:transition-all after:duration-300 hover:after:w-full"
            data-link={link.href}
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>

    <!-- Botón hamburguesa para móviles -->
    <button id="menu-toggle" class="md:hidden text-green-400 focus:outline-none">
      <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M3 12h18M3 6h18M3 18h18"></path>
      </svg>
    </button>
  </div>

  <!-- Menú desplegable en móviles -->
  <div id="mobile-menu" class="fixed top-0 left-0 w-full h-screen bg-[#191a1a] text-white flex flex-col items-center justify-center space-y-6 transform -translate-x-full transition-transform duration-300 md:hidden">
    {links.map((link) => (
      <a href={link.href} class="text-2xl font-semibold hover:text-green-400 transition">
        {link.name}
      </a>
    ))}

    <!-- Botón de cierre más grande y abajo -->
    <button id="close-menu" class="absolute bottom-7 text-green-400 text-5xl">
      &times;
    </button>
  </div>
</nav>

<!-- Importando el JavaScript -->
<script src="../scripts/nav.js"></script>
