---
const links = [
  { name: "Home", href: "/" },
  { name: "Works", href: "/works" },
  { name: "Contact", href: "/contact" },
];
---

<nav class="w-full bg-black/80 backdrop-blur-md text-gray-300 py-4 px-6 fixed top-0 left-0 shadow-lg z-50">
  <div class="max-w-6xl mx-auto flex items-center">
    <div class="text-2xl font-bold tracking-wide transition-transform transform hover:scale-105 text-white flex-1">
      Adrian Cabrera Leonis
    </div>
    <ul class="flex space-x-6 text-lg justify-end flex-1">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="relative font-semibold text-xl transition-all duration-300 hover:text-white"
            data-link={link.href}
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  import "../scripts/nav.js";
</script>