---
const navItems = [
  { name: "Inicio", href: "/#hero" },
  { name: "Sobre mí", href: "/#about" },
  { name: "Experiencia", href: "/#experience" },
  { name: "Habilidades", href: "/#skills" },
  { name: "Proyectos", href: "/#projects" },
  { name: "Contacto", href: "/#contact" }
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="header">
  <div class="max-w-7xl mx-auto px-6 py-4">
    <nav class="relative flex items-center justify-between p-4 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl shadow-lg">
      
      <!-- Logo -->
      <a href="/" class="group flex items-center space-x-3 z-50">
        <div class="relative">
          <!-- Hexágono contenedor -->
          <div class="relative w-12 h-12 flex items-center justify-center">
            <!-- Hexágono de fondo -->
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100">
              <defs>
                <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
                </linearGradient>
              </defs>
              <polygon 
                points="50 5, 90 25, 90 75, 50 95, 10 75, 10 25" 
                fill="url(#logoGradient)"
                class="transition-all duration-300 group-hover:scale-110"
              />
            </svg>
            
            <!-- Letra A estilizada -->
            <div class="relative z-10 text-white font-bold text-xl transition-transform duration-300 group-hover:scale-110">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2L2 22h20L12 2z" class="transition-all duration-300"/>
                <line x1="7" y1="16" x2="17" y2="16" class="transition-all duration-300"/>
              </svg>
            </div>

            <!-- Anillo exterior animado -->
            <svg class="absolute inset-0 w-full h-full opacity-0 group-hover:opacity-100 transition-opacity duration-300" viewBox="0 0 100 100">
              <polygon 
                points="50 5, 90 25, 90 75, 50 95, 10 75, 10 25" 
                fill="none"
                stroke="url(#logoGradient)"
                stroke-width="2"
                class="animate-spin-slow"
                style="transform-origin: center;"
              />
            </svg>
          </div>

          <!-- Glow effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-green-400/30 to-blue-500/30 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>

        <!-- Texto del logo -->
        <div class="hidden sm:flex flex-col leading-none">
          <span class="text-white font-bold text-lg tracking-tight group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-green-400 group-hover:to-blue-500 group-hover:bg-clip-text transition-all duration-300">
            Adrián
          </span>
          <span class="text-gray-400 text-xs font-medium tracking-wider">
            CABRERA
          </span>
        </div>
      </a>

      <!-- Navegación Desktop -->
      <ul class="hidden lg:flex items-center space-x-1">
        {navItems.map((item, index) => (
          <li>
            <a 
              href={item.href}
              class="group relative px-4 py-2 text-gray-300 hover:text-white font-medium transition-colors duration-300"
            >
              <span class="relative z-10">{item.name}</span>
              <span class="absolute inset-0 bg-white/5 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
              <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 group-hover:w-3/4 transition-all duration-300"></span>
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Desktop -->
      <a 
        href="/#contact"
        class="hidden lg:flex items-center space-x-2 bg-gradient-to-r from-green-400 to-blue-500 hover:from-green-500 hover:to-blue-600 text-white font-semibold px-6 py-2.5 rounded-xl transition-all duration-300 shadow-lg shadow-green-400/20 hover:shadow-green-400/40 hover:scale-105"
      >
        <span>Contactar</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>

      <!-- Botón hamburguesa -->
      <button 
        id="menu-toggle"
        class="lg:hidden relative w-10 h-10 flex items-center justify-center text-gray-300 hover:text-white transition-colors duration-300 z-[60]"
        aria-label="Toggle menu"
      >
        <div class="w-6 h-5 flex flex-col justify-between">
          <span class="menu-line w-full h-0.5 bg-current rounded-full transition-all duration-300"></span>
          <span class="menu-line w-full h-0.5 bg-current rounded-full transition-all duration-300"></span>
          <span class="menu-line w-full h-0.5 bg-current rounded-full transition-all duration-300"></span>
        </div>
      </button>
    </nav>
  </div>

  <!-- Menú móvil -->
  <div 
    id="mobile-menu"
    class="lg:hidden fixed inset-0 bg-[#0a192f]/95 backdrop-blur-xl opacity-0 invisible transition-all duration-300 flex items-center justify-center z-[55]"
  >
    <!-- Botón cerrar -->
    <button
      id="menu-close"
      class="absolute top-8 right-8 w-12 h-12 flex items-center justify-center text-gray-300 hover:text-white transition-all duration-300 z-[60] bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl hover:border-red-400/30 hover:bg-red-400/10 group"
      aria-label="Cerrar menú"
    >
      <svg class="w-6 h-6 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Elementos decorativos -->
    <div class="absolute top-20 right-20 w-64 h-64 bg-green-400/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 left-20 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

    <!-- Contenido del menú -->
    <div class="relative w-full max-w-md px-8">
      <!-- Navegación móvil -->
      <ul class="space-y-2 mb-12">
        {navItems.map((item, index) => (
          <li style={`animation-delay: ${index * 0.1}s`} class="menu-item opacity-0">
            <a 
              href={item.href}
              class="group block p-4 bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl hover:border-green-400/30 transition-all duration-300 hover:transform hover:translate-x-2"
            >
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <div class="w-10 h-10 bg-gradient-to-br from-green-400/20 to-blue-500/20 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <span class="text-green-400 font-mono text-sm">0{index + 1}</span>
                  </div>
                  <span class="text-white font-semibold text-lg">{item.name}</span>
                </div>
                <svg class="w-5 h-5 text-gray-400 group-hover:text-green-400 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</header>

<script>
  // Header con efecto de scroll
  const header = document.getElementById('header');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
    
    lastScroll = currentScroll;
  });

  // Toggle del menú móvil
  const menuToggle = document.getElementById('menu-toggle');
  const menuClose = document.getElementById('menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuItems = document.querySelectorAll('.menu-item');
  const menuLines = document.querySelectorAll('.menu-line');

  let isMenuOpen = false;

  function toggleMenu() {
    isMenuOpen = !isMenuOpen;
    
    if (isMenuOpen) {
      // Abrir menú
      mobileMenu?.classList.remove('invisible', 'opacity-0');
      mobileMenu?.classList.add('opacity-100');
      document.body.style.overflow = 'hidden';
      
      // Animar líneas del hamburguesa
      menuLines[0]?.classList.add('rotate-45', 'translate-y-2');
      menuLines[1]?.classList.add('opacity-0');
      menuLines[2]?.classList.add('-rotate-45', '-translate-y-2');
      
      // Animar items del menú
      setTimeout(() => {
        menuItems.forEach((item, index) => {
          setTimeout(() => {
            item.classList.remove('opacity-0');
            item.classList.add('animate-slide-in');
          }, index * 100);
        });
      }, 100);
    } else {
      // Cerrar menú
      mobileMenu?.classList.add('opacity-0');
      mobileMenu?.classList.remove('opacity-100');
      document.body.style.overflow = '';
      
      setTimeout(() => {
        mobileMenu?.classList.add('invisible');
      }, 300);
      
      // Resetear líneas del hamburguesa
      menuLines[0]?.classList.remove('rotate-45', 'translate-y-2');
      menuLines[1]?.classList.remove('opacity-0');
      menuLines[2]?.classList.remove('-rotate-45', '-translate-y-2');
      
      // Resetear animación de items
      menuItems.forEach(item => {
        item.classList.add('opacity-0');
        item.classList.remove('animate-slide-in');
      });
    }
  }

  menuToggle?.addEventListener('click', toggleMenu);
  menuClose?.addEventListener('click', toggleMenu);

  // Cerrar menú al hacer click en un enlace
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      if (isMenuOpen) {
        toggleMenu();
      }
    });
  });

  // Cerrar menú al presionar ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isMenuOpen) {
      toggleMenu();
    }
  });
</script>

<style>
  #header.scrolled nav {
    background-color: rgba(10, 25, 47, 0.9);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-slide-in {
    animation: slide-in 0.4s ease-out forwards;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
  }
  
  .animate-pulse {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  /* Transiciones suaves para las líneas del hamburguesa */
  .menu-line {
    transform-origin: center;
  }

  /* Animación lenta de rotación para el anillo del logo */
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }
</style>