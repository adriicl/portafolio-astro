---
const links = [
  { name: "Home", href: "/" },
  { name: "Projects", href: "/projects" },
  { name: "Contact", href: "/contact" },
];
---

<nav class="w-full bg-[#191a1a] backdrop-blur-md text-gray-300 py-4 px-6 fixed top-0 left-0 shadow-lg z-50 border-b border-green-400">
  <div class="w-full flex items-center justify-between">
    
    <!-- Nombre alineado completamente a la izquierda -->
    <div class="text-2xl font-bold tracking-wide transition-transform transform hover:scale-105 text-green-400">
      Adrian Cabrera Leonis
    </div>
    
    <!-- NavegaciÃ³n alineada completamente a la derecha -->
    <ul class="flex space-x-6 text-lg">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="relative font-semibold text-xl transition-all duration-300 hover:text-green-400 after:content-[''] after:block after:w-0 after:h-[2px] after:bg-green-400 after:transition-all after:duration-300 hover:after:w-full"
            data-link={link.href}
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  import "../scripts/nav.js";
</script>
